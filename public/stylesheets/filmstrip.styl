html[data-type=filmstrip] {
  overflow: hidden
  background: black;

  body {
    width: 100%
    height: 100%
    margin-bottom: 0
    background: black;
  }

  .header, .footernotice {
    display: none
  }

  .filmstrip {
    margin: 0
    height: 60px
    span {
      margin: -1px
      img.selected {
        opacity: 0.75
      }
    }
    img     {
      width: 58px;
      height: 58px;
    }
  }

  .gallery {

    height: calc(100% \- 60px)

    figcaption, h1, section, footer {
      display: none
    }

    .photos .stream, .stream.entry, figure, img {
      margin: 0
      padding: 0
      width: 100%
    }

    h4 {
      color: white;
      font-size: 16px
      font-family: arial
    }

    img {
      margin: auto
      box-shadow: none
      width: auto
      max-width: 100%;
      max-height: calc(100% \- 60px)
    }

    .stream.entry {
      display: none
      &.selected {
        display: block
      }
    }
  }
}
