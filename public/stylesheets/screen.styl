html. body
  margin 0
  padding 0
  background red
  height 100%
  font-size:10px;
  line-height:10px;

body
  margin 0
  padding 0
  background white

.header
  border-bottom 1px solid black
  color #0063c8
  h1
    font-size 300%
    line-height 1em
    margin-bottom: -0.1em
    margin-left: 0.2em
    font-family helvetica
  .highlight
    color #ff0084

.content
  position relative

.stream
  text-align center
  width 900px
  margin: auto
  .entry
    figure
      margin 0
      h4
        font-weight bold
        margin 0
      figcaption
        font-style italic
        opacity 0.3
    position relative
    h1
      line-height 1em
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      width 100%

    display inline-block
    width 240px
    height 400px
    vertical-align top
    text-overflow ellipsis
    overflow hidden
    margin 1em
    p
      text-align justify
    footer
      position absolute
      bottom 0
      left 0
      right 0
      background white
      box-shadow 0 0 60px 50px white
  .pages
    list-style none
    li
      display inline-block
      width 20px
      height 20px
      text-align center
      vertical-align middle
      border 1px solid rgba(0,0,0,0.2)
      a
        text-decoration none
      a:visited
        color inherit
      color #0063c8
      &.current
        font-weight bold
        color #ff0084
      &:hover
        background #0063dc
        color white
      &.noborder
        border none

.side
  position absolute
  width 200px
  top 0
  background #f4f4f4
  padding 3em 0em
  margin 2em

  text-align center
  &.left
    left 0
  &.right
    right 0

.collection, .set
  img
    border 1px solid black

.footernotice
  border-top 1px solid black
  padding-top 0.5em
  background #f4f4f4
  line-height 2em
  text-align center
