html. body
  margin 0
  padding 0
  background red
  height 100%
  font-size:10px;
  line-height:10px;

body
  margin 0
  padding 0
  background white

.header
  border-bottom 1px solid black
  color #0063c8
  h1
    font-size 300%
    line-height 1em
    margin-bottom: -0.2em
  .highlight
    color #ff0084

.content
  position relative

.stream
  position absolute
  margin 0 200px
  top 0
  text-align center
  .entry
    figcaption
      font-style italic
      opacity 0.3
    position relative
    h1
      line-height 1em
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      width 100%
    display inline-block
    height 400px
    width 300px
    text-overflow ellipsis
    overflow hidden
    margin 1em
    p
      text-align justify
    footer
      position absolute
      bottom 0
      left 0
      right 0
      background white
      box-shadow 0 0 60px 50px white

.side
  position absolute
  width 200px
  top 0

  text-align center
  &.left
    left 0
  &.right
    right 0

.collection, .set
  img
    border 1px solid black