html, body {
  margin: 0
  padding: 0
  background: red
}

html {
  height: 100%
}

body {
  position: relative
  background: white
  min-height: 100%
  margin-bottom: -2em
}

.header {
  position: relative
  border-bottom: 1px solid black
  background: white

  color: #0063c8
  h1 {
    font-size: 300%
    line-height: 1em
    margin: 0
    margin-bottom: -0.1em
    margin-left: 0.2em
    padding-top: 1em
    font-family: helvetica
  }
  .highlight {
    color: #ff0084
  }
  a {
    text-decoration: none
    &:visited {
      color: inherit
    }
  }
  .plain {
    color: #222
  }
  .accountlink {
    position absolute;
    display: block;
    top: 0.5em;
    right: 10px;
  }
}

.content {
  max-width: 1200px
  margin: auto
  position: relative
  text-align: center
  background: white
  .photo {
    width: 74%
  }
  .navs {
    width: 25%
  }
  .photo, .navs {
    display: inline-block
    vertical-align: top
    img {
      max-width: 100%;
    }
  }
}

.streamnav {
  font-size: 85%
  line-height: 1em
  background: #EEE
  padding: 0.5em
  padding-top: 0.25em
  margin-bottom: 10px
  a {
    text-decoration: none
    color: #ff0084
  }
  span, img {
    display: inline-block
    margin: 0
    padding: 0
  }
  span {
    line-height: 0
    width: 25%
    & + span {
      margin-left: 10px
    }
  }
  img {
    border: 1px solid black
  }
  p {
    font-family: helvetica
    font-weight: bold
  }
}

.photostream {
  margin-top: 1em
}

.navs .photostream .streamnav {
  border: 1px solid orange
  .current {
    border: 5px solid orange
    border-right-width: 6px
  }
}

.prev a,
.next a {
  border: none
  color: black
}

.stream, .set>.photos {
  text-align: center
  width: 1020px
  margin: auto
  .entry {
    position: relative
    display: inline-block
    width: 240px
    height: 400px
    vertical-align: top
    text-overflow: ellipsis
    overflow: hidden
    margin: 1em
    .owner {
      font-style: italic;
    }
    figure {
      margin: 0
      h4 {
        font-weight: bold
        margin: 0
      }
      figcaption {
        font-style: italic
        opacity: 0.3
      }
    }
    h1 {
      line-height: 1em
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      width: 100%
    }
    p {
      text-align: justify
    }
    footer {
      position: absolute
      bottom: 0
      left: 0
      right: 0
      background: white
      box-shadow: 0 0 60px 50px white
    }
    .links {
      font-size: 70%
    }
  }
}

.pages {
  list-style: none
  padding-bottom: 1em;
  li {
    display: inline-block
    width: 20px
    height: 20px
    text-align: center
    vertical-align: middle
    border: 1px solid rgba(0,0,0,0.2)
    color: #0063c8
    a {
      color: inherit
      text-decoration: none
      &:visited {
        color: inherit
      }
    }
    &.current {
      font-weight: bold
      color: #ff0084
    }
    &:hover {
      background: #0063dc
      color: white
    }
    &.noborder {
      border: none
    }
  }
}

.description, .comments {
  text-align: justify
}

.comments {
  border-top: 1px solid black
  .comment {
    margin: 1em
    padding: 5px 1em
    background: #EEE
    .author {
      text-align: right
    }
    .flickrlink a {
      text-decoration: none
      font-size: 75%
    }
  }
}

.side {
  width: 200px
  background: #f4f4f4
  padding: 3em 0em
  margin: 2em
  vertical-align: top
  text-align: center
  &.left {
    float: left
  }
  &.right {
    float: right
    padding-top: 1.5em
    .moresets, .recentlink {
      display: block
      color: #0063c8
      font-family: helvetica
      font-size: 110%
      text-decoration: none
    }
    .moresets {
      margin-top: 1.5em
      margin-bottom: -1em
    }
    .recentlink {
      margin-top: 1em
    }
    hr {
      margin-top: 2em;
    }
  }
  a {
    text-decoration: none
    color: #0063c8
  }
}

.collection, .set {
  img {
    border: 1px solid black
  }
  &.recent {
    h1 {
      text-align: center
      color: #0063c8
      font-family: helvetica
      font-variant: small-caps
      margin: 1em 0
    }
    .photos {
      width: auto
    }
  }
}

.filmstrip {
  text-align: center
  background: #f4f4f4
  padding: 0
  line-height: 0
  border-bottom: 1px solid black
  margin-bottom: 2em
  img {
    width: 4%
    margin: 0
    opacity: 0.3
    &:hover {
      opacity: 1
    }
  }
  a {
    text-decoration: none
    margin: -1px;
    & + a {
      margin-left: 2px
    }
    &.leftnav, &.rightnav {
      display: inline-block
      width: 0
      border: 25px solid transparent
      opacity: 0.3
      &:hover {
        opacity: 1
      }
    }
    &.leftnav {
      border-right: 10px solid grey
    }
    &.rightnav {
      border-left: 10px solid grey
    }
  }
}

.footernotice {
  border-top: 1px solid black
  background: #f4f4f4
  line-height: 2em
  text-align: center
  position: absolute
  bottom: -2em
  left: 0
  right: 0
}

.collection header {
  margin: 1em
  font-size: 225%
  h1 {
    font-family: Arial
    font-size: inherit
    color: #0063c8
    margin-bottom: -0.5em
  }
  a {
    font-size: 50%
    color: #ff0084
  }
}

.collection, .gallery {
  text-align: center
  .collection_set {
    display: inline-block
    width: 240px
    height: 400px
    vertical-align: top
    overflow: hidden
    text-align: left
  }
  .gallery_set {
    border: 1em solid #292929
    border-bottom-width: 3em

    img {
      border: 1px solid black
    }
    .set_description {
      text-align: center
      background: #ff0084
      padding: 1em
      color: white
      font-family: arial
      font-size: 110%
      margin-bottom: 1em
      p {
        width: 60%
        margin: auto
        text-align: justify
        min-width: 400px
        font-family: times
      }
      img {
        width: 300px
        margin-top: 2em
      }
    }
    .stream.entry {
      display: inline-block;
      width: 400px;
      vertical-align: top;
    }
  }
  div.thumbnails {
    width: 112px
    margin: auto
    background: white
    line-height: 0
    img.collection_thumb {
      display: inline-block
      width: 100px
      margin: 0.5px
    }
  }
  a {
    text-decoration: none
    margin: 0
  }
  img {
    box-shadow: 10px 10px 18px -3px rgba(64, 93, 97, 0.6);
  }
}

.pool {
  display: table
  background: #EEE
  margin-bottom: 10px;
  min-height: 48px
  width: 100%
  span {
    display: table-cell
    vertical-align: middle
    text-align: center
  }
  img {
    float: right
  }
}

.set-boxes {
  margin: 2em 0
  text-align: center
  .set-box {
    display: inline-block
    width: 300px
    height: 300px
    vertical-align: top
    margin: 5px
    background: #F3F3F3
    text-align: center
    overflow: hidden
    a {
      text-decoration: none
      color: #333
    }
    p {
      text-align: left
      text-overflow: ellipsis
    }
    img {
      border: 1px solid #333
    }
  }
}

form[action='/signup'] {
  formset {
    display: block
    label, input {
      width: 25em
      display: inline-block
    }
  }
  input[type=submit] {
    display: block
    margin: 0.5em
  }
}

.searchbox {
  display: inline-block
  position: absolute
  top: 0.5em
  right: 0.5em
}

.userbox {
  display: inline-block
  font-family: Arial
  font-weight: 900
  margin: 0.5em
  border: 1px solid grey
  padding: 0.5em
  h2 {
    font-size: 300%
    margin: 0.5em 0
  }
  div {
    display: inline-block
    padding: 0.5em
    margin: 0.5em
    background: grey
    color: white
    text-shadow: 2px 2px black
    span {
      display: block
      font-size: 300%
    }
    a {
      font-size: 100%
      color: white
      text-decoration: none
    }
  }
}
